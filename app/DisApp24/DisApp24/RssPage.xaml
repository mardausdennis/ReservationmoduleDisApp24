<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DisApp24.RssPage">
    <CollectionView x:Name="RssFeedView" ItemsSource="{Binding RssItems}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10">
                    <Label Text="{Binding Title}" FontAttributes="Bold" FontSize="16" />
                    <Label Text="{Binding PubDate, StringFormat='{0:dd/MM/yyyy}'}" FontSize="12" TextColor="Gray" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
