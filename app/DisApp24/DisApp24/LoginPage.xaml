<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DisApp24.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="15" VerticalOptions="Center">
            <Label Text="Bitte anmelden" FontSize="Large" HorizontalOptions="Center" />
            <Frame BorderColor="DimGray" CornerRadius="5" Padding="5">
                <Entry x:Name="UsernameEntry" Placeholder="Benutzername" />
            </Frame>
            <Frame BorderColor="DimGray" CornerRadius="5" Padding="5">
                <Entry x:Name="PasswordEntry" Placeholder="Passwort" IsPassword="True" />
            </Frame>
            <Button x:Name="LoginButton" Text="Anmelden" Clicked="OnLoginButtonClicked" />
            <Button x:Name="GoogleLoginButton" Text="Mit Google anmelden" Clicked="OnGoogleLoginButtonClicked" />
            <Label Text="Noch keinen Account?" HorizontalOptions="Center" />
            <Button x:Name="RegisterButton" Text="Hier registrieren" Clicked="OnRegisterButtonClicked" />
            <Button x:Name="GuestContinueButton" Text="Als Gast fortfahren" Clicked="OnGuestContinueButtonClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
