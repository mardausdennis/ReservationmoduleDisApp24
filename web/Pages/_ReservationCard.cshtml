@model web.Models.Reservation

<div class="card mb-3">
    <div class="card-header">
        @Model.Name - @Model.Date - @Model.Time
    </div>
    <div class="card-body">
        <form method="post" class="reservation-form mb-3">
            <input type="hidden" name="id" value="@Model.Id" />

            <!-- Beschreibungen für die Spalten -->
            <div class="row mb-2">
                <div class="col-md-2" style="font-weight: 700; color: #dddddd;">Name</div>
                <div class="col-md-3" style="font-weight: 700; color: #dddddd;">E-Mail</div>
                <div class="col-md-2" style="font-weight: 700; color: #dddddd;">Telefonnummer</div>
                <div class="col-md-2" style="font-weight: 700; color: #dddddd;">Ressource</div>
                <div class="col-md-2" style="font-weight: 700; color: #dddddd;">Datum</div>
                <div class="col-md-1" style="font-weight: 700; color: #dddddd;">Zeit</div>
            </div>

            <!-- Daten für die Spalten -->
            <div class="row mb-2">
                <div class="col-md-2">@Model.Name</div>
                <div class="col-md-3">@Model.Email</div>
                <div class="col-md-2">@Model.PhoneNumber</div>
                <div class="col-md-2">@Model.Resource</div>
                <div class="col-md-2">@Model.Date</div>
                <div class="col-md-1">@Model.Time</div>
            </div>

            @if (Model.Status == "Pending")
            {
                <div class="d-flex justify-content-center align-items-center">
                    <button type="submit" asp-page-handler="Confirm" name="handler" value="Confirm" class="btn btn-success" style="margin-right: 15px;">Bestätigen</button>
                    <button type="submit" asp-page-handler="Reject" name="handler" value="Reject" class="btn btn-danger">Ablehnen</button>
                </div>
            }

        </form>
    </div>

    @if (!string.IsNullOrEmpty(Model.Comment))
    {
        <div class="card-footer">
            <strong>Kommentar:</strong> @Model.Comment
        </div>
    }
</div>
