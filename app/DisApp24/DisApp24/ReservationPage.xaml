<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DisApp24.ReservationPage"
             x:Name="This">
    <ContentPage.Content>
        <StackLayout Margin="20" Spacing="15">
            <Entry x:Name="FirstNameEntry" Placeholder="Vorname" />
            <Entry x:Name="LastNameEntry" Placeholder="Nachname" />
            <Entry x:Name="EmailEntry" Placeholder="E-Mail-Adresse" />
            <!-- LänderCodePicker TODO: <Picker x:Name="CountryCodePicker" Title="Ländervorwahl auswählen" SelectedIndexChanged="OnCountryCodePickerSelectedIndexChanged" /> -->
            <Entry x:Name="PhoneNumberEntry" Placeholder="Telefonnummer (optional)" />
            <Picker x:Name="ResourcePicker" Title="Ressource auswählen" />
            <Label x:Name="SelectedDateLabel" Text="Datum auswählen" TextColor="DimGray" />
            <Button x:Name="SelectDateButton" Text="Datum auswählen" Clicked="OnSelectDateButtonClicked" />
            <Picker x:Name="TimePicker" Title="Uhrzeit auswählen" />
            <Editor x:Name="CommentEditor" Placeholder="Kommentar (optional)" />
            <Button x:Name="ReserveButton" Text="Reservieren" Clicked="OnReserveButtonClicked" BackgroundColor="#FF5733" />
            <Label x:Name="ValidationLabel" TextColor="Red" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
